    <link rel="stylesheet" href="@Url.Content("~/Content/css/linearicons.css")">
    <link rel="stylesheet" href="@Url.Content("~/Content/css/font-awesome.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/Content/css/themify-icons.css")">
    <link rel="stylesheet" href="@Url.Content("~/Content/css/bootstrap.css")">
    <link rel="stylesheet" href="@Url.Content("~/Content/css/owl.carousel.css")">
    <link rel="stylesheet" href="@Url.Content("~/Content/css/nice-select.css")">
    <link rel="stylesheet" href="@Url.Content("~/Content/css/nouislider.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/Content/css/magnific-popup.css")">
    <link rel="stylesheet" href="@Url.Content("~/Content/css/main.css")">
    <link rel="stylesheet" href="@Url.Content("~/Content/css/site.css")">

    <!-- JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="@Url.Content("~/Content/js/vendor/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.nice-select.min.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.magnific-popup.min.js")"></script>
    <script src="@Url.Content("~/Content/js/jquery.sticky.js")"></script>
    <script src="@Url.Content("~/Content/js/nouislider.min.js")"></script>
    <script src="@Url.Content("~/Content/js/owl.carousel.min.js")"></script>
    <script src="@Url.Content("~/Content/js/main.js")"></script>

    <script>
        // Script này không có vấn đề
		var addCategoryId = @(TempData["AddCategoryId"] == "true" ? "true" : "false");
		if (addCategoryId) {
			document.getElementsByTagName("body")[0].id = "category";
		}
    </script>
    @RenderSection("Script", required: false)
</head>

<body>
    <header class="header_area sticky-header">
        <div class="main_menu">
            <nav class="navbar navbar-expand-lg navbar-light main_box">
                <div class="container">
                    <a class="navbar-brand logo_h" href="@Url.Action("Index", "Home")"><img style="height:80px" src="@Url.Content("~/Content/img/logo.png")" alt=""></a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                    </button>
                    <div class="collapse navbar-collapse offset" id="navbarSupportedContent">
                        <ul class="nav navbar-nav menu_nav ml-auto">
                            @if (Session["Khuyenmai"] != null && (int)Session["Khuyenmai"] == 1)
                            {
                              
                                Html.RenderAction("KhuyenMai", "KhuyenMai");
                            }

                           
                            @{ Html.RenderAction("LoaiSP", "SanPham"); }

                      
                            <li class="nav-item">@Html.ActionLink("Nhật ký", "Index", "Blog", null, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Theo dõi", "Tracking", "TrackingOrder", null, new { @class = "nav-link" })</li>
                            <li class="nav-item submenu dropdown">
                                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Tài khoản</a>
                                <ul class="dropdown-menu">
                                    @if (Session["Email"] == null)
                                    {
                                        <li class="nav-item">@Html.ActionLink("Đăng nhập", "Login", "Account", null, new { @class = "nav-link" })</li>
                                        <li class="nav-item">@Html.ActionLink("Đăng ký", "Register", "Account", null, new { @class = "nav-link" })</li>
                                    }
                                    else
                                    {
                                        <li class="nav-item">@Html.ActionLink("Thông tin", "UserProfile", "Account", null, new { @class = "nav-link" })</li>
                                        <li class="nav-item">@Html.ActionLink("Đăng xuất", "Logout", "Account", null, new { @class = "nav-link" })</li>
                                    }
                                </ul>
                            </li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li class="nav-item"><a href="@Url.Action("ViewCart", "ShoppingCart")" class="cart"><span class="ti-bag"></span></a></li>
                            <li class="nav-item"><a href="@Url.Action("ViewFavouriteProducts", "FavouriteProducts")" class="heart"><span class="ti-heart"></span></a></li>
                            <li class="nav-item"><button class="search"><span class="lnr lnr-magnifier" id="search"></span></button></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
        <div class="search_input" id="search_input_box">
            <div class="container">
                <div id="kmToggle">
               
                    @using (Html.BeginForm("SanPhamTheoLoai", "SanPham", FormMethod.Get, new { @class = "d-flex justify-content-between", id = "searchForm" }))
                    {
                        <input type="text" name="searchString" class="form-control" id="search_input" placeholder="Searching shoes">
                        <button type="submit" class="btn"></button>
                        <span class="lnr lnr-cross" id="close_search" title="Close Search"></span>
                    }
                </div>
                @RenderSection("searchProductSales", required: false)
            </div>
        </div>
    </header>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="container" style="margin-top: 20px;">
            <div class="alert alert-success alert-dismissible fade show alert-autodismiss" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
        </div>
    }

    @RenderBody()

