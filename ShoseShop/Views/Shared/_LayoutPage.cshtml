    <style>
        .toast-notification {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 10999;
            min-width: 300px;
        }
    </style>

    <script type="text/javascript">
        $(document).ready(function () {
            if ($('.alert-autodismiss').length) {
                setTimeout(function () {
                    $('.alert-autodismiss').fadeOut(500, function () {
                        $(this).remove();
                    });
                }, 5000);
            }
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>