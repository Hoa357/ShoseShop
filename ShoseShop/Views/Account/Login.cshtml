@model ShoseShop.Data.TaiKhoan

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Đăng nhập</h1>
                <nav class="d-flex align-items-center">
                    <a href="@Url.Action("Index", "Home")">Trang chủ<span class="lnr lnr-arrow-right"></span></a>
                    <a>Đăng nhập</a>
                </nav>
            </div>
        </div>
    </div>
</section>

<section class="login_box_area section_gap">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="login_box_img">
                    <img src="@Url.Content("~/Content/img/dk.png")" alt="Đăng ký" />
                    <div class="hover">
                        <h4>Chào mừng bạn đã đến ShoesShop</h4>
                        <p>Cảm ơn bạn đã chọn ủng hộ và tin tưởng ShoesShop</p>
                        @Html.ActionLink("Tạo một tài khoản", "Register", "Account", null, new { @class = "primary-btn" })
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="login_form_inner">
                    <h3>ĐĂNG NHẬP</h3>

                  
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "row login_form", id = "contactForm" }))
                    {
                      
                        @Html.AntiForgeryToken()

                       
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        
                        if (ViewBag.backToPage != null)
                        {
                            @Html.Hidden("backToPage", (string)ViewBag.backToPage)
                        }

                        <div class="col-md-12 form-group">
                            
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email", onfocus = "this.placeholder = ''", onblur = "this.placeholder = 'Email'" })
                          
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-12 form-group">
                            
                            @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control", placeholder = "Mật khẩu", onfocus = "this.placeholder = ''", onblur = "this.placeholder = 'Password'" })
                            @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-12 form-group">
                            <button type="submit" value="submit" class="primary-btn">Đăng nhập</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

